<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- <FrameLayout
        android:id="@+id/pub_map_placeholder"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>-->

    <com.google.android.gms.maps.MapView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <TextView
            android:id="@+id/view_pup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pup name:" />

        <TextView
            android:id="@+id/pub_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/view_pup_name"
            android:text="Pup name:" />

        <TextView
            android:id="@+id/view_pup_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_pup_name"
            android:text="Pup Size:" />

        <TextView
            android:id="@+id/pub_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/view_pup_size"
            android:text="Pup size:" />

        <LinearLayout
            android:id="@+id/date_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_pup_size"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Event date: " />

            <Button
                android:id="@+id/event_new_date_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02.01.1990" />
        </LinearLayout>

        <Button
            android:layout_below="@id/date_placeholder"
            android:id="@+id/pub_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Done" />
    </RelativeLayout>

</LinearLayout>