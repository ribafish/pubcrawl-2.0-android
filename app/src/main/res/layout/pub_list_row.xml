<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >
    <RelativeLayout
        android:id="@+id/pub_rel_lay"
        android:layout_width="match_parent"
        android:paddingTop="8dp"
        android:layout_height="36dp">

        <TextView
            android:id="@+id/pub_number"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="0"/>

        <TextView
            android:id="@+id/pub_name"
            android:layout_toRightOf="@+id/pub_number"
            android:layout_toEndOf="@+id/pub_number"
            android:layout_toLeftOf="@+id/pub_time"
            android:layout_toStartOf="@+id/pub_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Name"/>

        <TextView
            android:id="@+id/pub_time"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="time"/>
    </RelativeLayout>

</LinearLayout>